<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/enjoysharingdb?autoReconnection=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">$sql2019</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2dll.auto">update</property>
        
        <mapping resource="Hibernate/Tables/Parameter.hbm.xml" />
        <mapping resource="Hibernate/Tables/Genderevent.hbm.xml" />
        <mapping resource="Hibernate/Tables/Requeststatus.hbm.xml" />
        <mapping resource="Hibernate/Tables/Photo.hbm.xml" />
        <mapping resource="Hibernate/Tables/User.hbm.xml" />
        <mapping resource="Hibernate/Tables/Usertofriend.hbm.xml" />
        <mapping resource="Hibernate/Tables/Event.hbm.xml" />
        <mapping resource="Hibernate/Tables/Request.hbm.xml" />
        <mapping resource="Hibernate/Tables/Loginfo.hbm.xml" />
    </session-factory>
</hibernate-configuration>
